<%# encoding: utf-8 %>
<%=
articles_count = blog.articles.size

MultiJson.dump(blog.articles.map.with_index do |article, index|
  {
    id: articles_count - index,
    url: full_url(article.url),
    title: article.title,
    content: Nokogiri::HTML(article.body).text,
    human_date: article.date.strftime('%d.%m.%Y'),
    main_img: (article.data.main_image ? full_url(article.data.main_image) : default_image_helper),
  }
end)
-%>


