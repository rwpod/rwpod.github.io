---
const { page, firstPageUrl } = Astro.props

const prevPageUrl = page.url.prev ? (
  firstPageUrl && page.currentPage === 2 ? firstPageUrl : page.url.prev
) : null
const nextPageUrl = page.url.next
---
<style>
  .pages-btn-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 1rem;
    gap: 1.5rem;
  }

  .pages-btn {
    border: 1px solid hsl(41deg 21% 65%);
    border-radius: 3px;
    color: hsl(13deg 70% 30%);
    display: inline-block;
    padding: 0.25rem 0.5rem;
  }

  .pages-btn:hover, .pages-btn:focus {
    border-color: hsl(44, 14%, 40%);
    color: hsl(13deg 50% 25%);
  }
</style>

<div class="pages-btn-wrapper">
  {prevPageUrl && <a class="pages-btn" href={prevPageUrl}>&laquo; Новіші випуски</a>}
  {nextPageUrl && <a class="pages-btn" href={nextPageUrl}>Старіші випуски &raquo;</a>}
</div>
