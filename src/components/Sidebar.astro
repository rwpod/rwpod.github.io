---
import SvgIcon from '@components/SvgIcon.astro'
---
<style>
  .social-header {
    margin-bottom: 0.5rem;
    font-size: 1.3rem;
  }

  .social-buttons-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .social-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    border: 1px solid hsl(41deg 21% 65%);
    border-radius: 3px;
    color: hsl(13deg 70% 30%);
    padding: 0.5rem;
    background: transparent;
    width: 14rem;
  }

  .social-button:hover, .social-button:focus {
    border-color: hsl(44, 14%, 40%);
    color: hsl(13deg 50% 25%);
  }

  .social-button-icon {
    display: flex;
    justify-content: center;
    align-items: center;
  }
</style>

<h2 class="social-header">Підпишись на нас</h2>

<div class="social-buttons-list">
  <a class="social-button" href="/rss.xml">
    <div class="social-button-icon">
      <SvgIcon size="2.5rem" name="rss-box" />
    </div>
    MP3 RSS Feed
  </a>
  <a class="social-button" href="/rss-aac.xml">
