---
import SvgIcon from '@components/SvgIcon.astro'
import Sidebar from '@components/Sidebar.astro'
import AudioButton from '@components/AudioButton.svelte'
import { getCoverAttributes } from '@utils/posts'

const { post } = Astro.props

const { Content } = await post.render()

const postImg = getCoverAttributes(post)
const audioInfo = {
  url: post.url,
  title: post.data.title,
  cover: post.data.cover,
  audioUrl: post.data.audio_url
}
---

<style>
  .main-article-block {
    display: flex;
    padding: 1rem;
    justify-content: space-between;
  }

  .mainbar {
    flex-basis: calc(100% * 2 / 3 - 0.3rem);
  }

  .sidebar {
    flex-basis: calc(100% / 3 - 1rem);
  }

  .article {
    background: hsl(0deg 0% 100%);
    border: 1px solid hsl(0deg 0% 88%);
  }

  .article-header {
    display: flex;
    gap: 1rem;
    background: hsl(178deg 88% 26%);
    color: hsl(0deg 0% 100%);
    padding: 0.75rem 1rem;
  }

  .article-headtitle {
    flex: 1;
  }

  .article-date {
    flex-basis: 4rem;
    font-size: 0.85rem;
  }

  .article-info {
    display: flex;
    flex-direction: column;
    padding: 1rem;
  }

  .article-metadata {
    display: flex;
    gap: 0.5rem;
  }

  .article-main-image-wrapper {
    flex-basis: 155px;
  }

  .article-main-image {
    aspect-ratio: 1/1;
    border: 1px solid hsl(44deg 14% 79%);
    max-width: 100%;
    height: auto;
    box-sizing: content-box;
  }

  .article-data {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .article-data-title {
    margin-bottom: 0.3rem;
  }

  .article-media-info {
    display: flex;
    justify-content: space-between;
    gap: 0.5rem;
    padding: 0.5rem 0;
  }

  .article-media-data {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.2rem;
    flex-basis: 60rem;
    flex-wrap: wrap;
    font-size: 0.9rem;
  }

  .article-separator {
    border-top: 1px solid hsl(44deg 14% 79%);
    height: 0;
    margin: 0 1rem;
  }

  .article-content {
    padding: 1rem;
  }

  .article-content :global(li > p) {
    margin: 0 0 0.5rem;
  }

  @media screen and (max-width: 600px) {
    .mainbar {
      flex-basis: 100%;
    }

    .sidebar {
      display: none;
    }

    .article-media-data {
      display: none;
    }

    .article-content :global(li > p) {
      margin: 0 0 1rem;
    }
  }

  @media screen and (max-width: 400px) {
    .article-main-image-wrapper {
      display: none;
    }
  }
</style>

<div class="main-article-block">
  <div class="mainbar">
    <article class="article">
      <div class="article-header">
        <div class="article-headtitle">{post.data.headlineTitle}</div>
        <div class="article-date">{post.data.formatedDate}</div>
      </div>
      <div class="article-info">
        <div class="article-metadata">
          <div class="article-main-image-wrapper">
            <img
              class="article-main-image"
              src={postImg.src}
              srcset={postImg.srcset}
              alt={post.data.title}
              title={post.data.title}
              width={postImg.size}
              height={postImg.size}
              loading="lazy"
            />
          </div>
          <div class="article-data">
            <h1 class="article-data-title">
              <a href={post.url} data-turbo-preload="true">
                {post.data.title}
              </a>
            </h1>
            <div class="article-media-info">
              <AudioButton client:load audioInfo={audioInfo}>
                <SvgIcon slot="playIcon" name="play" size="2rem" />
                <SvgIcon slot="stopIcon" name="stop" size="2rem" />
              </AudioButton>
              <div class="article-media-data">
                <div>{post.data.duration} -</div>
                <a href={post.data.audio_url}>MP3 ({post.data.audioSize})</a>
                {
                  post.data.audio_aac_url && (
                    <Fragment>
                      , <a href={post.data.audio_aac_url}>AAC ({post.data.audioAacSize})</a>
                    </Fragment>
                  )
                }
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="article-separator"></div>
      <div class="article-content">
        <Content />
      </div>
    </article>
    <!-- using for comments -->
    <slot />
  </div>
  <div class="sidebar">
    <Sidebar />
  </div>
</div>
