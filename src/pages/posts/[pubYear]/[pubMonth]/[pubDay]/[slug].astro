---
import AppLayout from '@layouts/app.astro'
import PostHead from '@components/PostHead.astro'
import MainPost from '@components/MainPost.astro'
import PostComments from '@components/PostComments.svelte'
import { getPosts } from '@utils/posts'

export const getStaticPaths = () => (
  getPosts().map((post) => ({
    params: {
      pubYear: post.frontmatter.pubYear,
      pubMonth: post.frontmatter.pubMonth,
      pubDay: post.frontmatter.pubDay,
      slug: post.frontmatter.slug
    },
    props: { post }
  }))
)

const { post } = Astro.props
---
<AppLayout title={post.frontmatter.title}>
  <PostHead slot="head" post={post} />

  <MainPost post={post}>
    <PostComments client:visible />
  </MainPost>

</AppLayout>
